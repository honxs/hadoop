<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bigdata-mroxdrmerge</artifactId>
    <groupId>cn.mastercom.bigdata</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>bigdata-mroxdrmerge-mapr</artifactId>
  <name>bigdata-mroxdrmerge-mapr</name>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <move />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>false</minimizeJar>
              <transformers>
                <transformer>
                  <mainClass>cn.mastercom.bigdata.mapr.Main</mainClass>
                </transformer>
              </transformers>
              <artifactSet>
                <includes>
                  <include>cn.mastercom*</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>cn.mastercom.bigdata:bigdata-building-locate</artifact>
                  <includes>
                    <include>cn/mastercom/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>org.apache.spark*</exclude>
                    <exclude>org.apache.hadoop*</exclude>
                    <exclude>remote/**</exclude>
                    <exclude>local/**</exclude>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <province>BeiJing</province>
    <env>local</env>
  </properties>
</project>

